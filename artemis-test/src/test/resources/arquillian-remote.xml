<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.com/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

<defaultProtocol type="artemis remote"/>
    <container qualifier="standalone" default="true" >
        <configuration>
            <property name="bootstrapHost">${bootstrap.host}</property>
            <property name="bootstrapPort">${bootstrap.port}</property>
            <property name="host">${standalone.host}</property>
            <property name="port">${standalone.port}</property>
            <property name="startTimeout">30000</property>
        </configuration>
    </container>
</arquillian>

